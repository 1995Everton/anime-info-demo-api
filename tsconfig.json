{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs", 
    "moduleResolution": "node",
    "lib": ["ES2018", "es2015", "dom"],   
    "declaration": true,    
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "types": ["node"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/__tests__/**/*"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}